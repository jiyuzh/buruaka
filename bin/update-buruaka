#!/usr/bin/env bash

SCRIPT_DIR=$(dirname "$(realpath -e "${BASH_SOURCE[0]:-$0}")")

cd "$SCRIPT_DIR"

pushd ..

git pull

if git remote get-url origin | grep -q 'github.deanon:'; then
	git push
fi

popd

if [ ! -d "./kernel-compile" ]; then
	exit 0
fi

pushd "./kernel-compile"

git pull

if git remote get-url origin | grep -q 'github.deanon:'; then
	git push
fi

popd
