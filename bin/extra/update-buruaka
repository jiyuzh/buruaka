#!/usr/bin/env bash

SCRIPT_DIR=$(dirname "$(realpath -e "${BASH_SOURCE[0]:-$0}")")

cd "$SCRIPT_DIR"
cd ..

pushd .. || exit 1

git pull

if git remote get-url origin | grep -q 'github.deanon:'; then
	git push
fi

popd || exit 1

if [ ! -d "./kernel-compile" ]; then
	exit 0
fi

pushd "./kernel-compile" || exit 1

git pull

if git remote get-url origin | grep -q 'github.deanon:'; then
	git push
fi

popd || exit 1
